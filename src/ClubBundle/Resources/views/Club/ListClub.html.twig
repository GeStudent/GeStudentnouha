{% extends 'back.html.twig' %}


{%  block body %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Club Name</th>
            <th scope="col">IMAGE</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">places</th>
            <th scope="col">Description</th>
            <th scope="col">Date</th>
            <th scope="col">Owner</th>
            <th scope="col">State</th>
            <th scope="col">ay7aja</th>

        </tr>
        </thead>
        <tbody>
        {% for Club in clubs %}
            <tr>
                <td>{{Club.id}}</td>
                <td style="width: 60px; padding:0px; text-align: center">
                    {% if Club.image != '' %}
                        <img alt="Livre Pic" style="width:150px;"
                             src="{{ asset('/../../images/uploads/') }}{{ Club.image }}"

                    {% endif %}
                </td>
                <td>{{Club.nom}}</td>
                <td>{{Club.email}}</td>
                <td>{{Club.tel}}</td>
                <td>{{Club.nombrePlace}}</td>
                <td>{{Club.description}}</td>
                <td>{{Club.date |date("m/d/Y") }}</td>
                <td>{{Club.idPresident}}</td>
                <td>{% if Club.etat == 0 %}
                        in Progress...
                    {% else %}
                        accpted
                    {% endif %}
                </td>

                <td>
                        <a href="{{ path('AccpetClub', { 'id': Club.id }) }}"
                           data-toggle="tooltip" title="Accpet Request">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </a>
                    <a href="{{ path('RefuseClub', { 'id': Club.id }) }}"
                       data-toggle="tooltip" title="Delete Club">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>


                </td>

            </tr>
        {% endfor %}

        </tbody>
    </table>
    {% for message in app.flashes('alert') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}